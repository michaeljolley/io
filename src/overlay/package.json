{
  "name": "io-overlay",
  "version": "2.0.0",
  "description": "Twitch chat client",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelJolley/io"
  },
  "main": "index.js",
  "_moduleAliases": {
    "@shared": "../shared/dist"
  },
  "scripts": {
    "start": "node dist/index.js",
    "debug": "node --inspect dist/index.js",
    "debug-compile": "npm run copy-assets && node --inspect dist/index.js",
    "build": "npm run copy-assets && tsc",
    "copy-assets": "copyfiles -au 1 ./src/wwwroot/**/* ./src/wwwroot/* dist/ && copyfiles -u 3 ./node_modules/socket.io-client/dist/socket.io.js dist/wwwroot/js"
  },
  "author": "Michael Jolley <mike@sparcapp.io>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "module-alias": "^2.2.0",
    "mongoose": "^5.6.0",
    "restler": "^3.4.0",
    "socket.io-client": "^2.2.0",
    "ts-node": "^8.1.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^12.0.2",
    "@types/socket.io-client": "^1.4.32",
    "copyfiles": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
